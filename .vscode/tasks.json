{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build main.cpp",
      "type": "shell",
      "command": "g++",
      "args": [
        "-o",
        "main.exe",
        "main.cpp",
        "-Iinclude",
        "-Llib",
        "-lraylib",
        "-lopengl32",
        "-lgdi32",
        "-lwinmm"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Custom build task for main.cpp"
    }
  ]
}
